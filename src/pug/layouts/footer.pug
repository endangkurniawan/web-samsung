    {
      title: 'Produk & Layanan',
      items: ['Smartphones', 'Tablets', 'Audio Sound', 'Watches', 'Smart Switch', 'Aksesoris', 'TVs', 'Lifestyle TV', 'Sound Devices', 'Kulkas', 'Laundry', 'Air Solutions', 'Cooking Appliances', 'Monitors', 'Memory Storage']
    },
    {
      title: 'Shop',
      items: ['Promo', 'Samsung Trade-In', 'Samsung Experience Store', 'Business Shop', 'Samsung Care', 'FAQ Toko Online', 'Store Pickup', 'Promo Program Pendidikan', 'Corporate Employee Offers', 'Explore', 'Terms & Conditions']
    },
    {
      title: 'Dukungan',
      items: ['Lihat Chat', 'Reservasi Perbaikan', 'Hubungi Kami', 'Product Registration', 'Pusat Service Center', 'Remote Service', 'Bahasa Isyarat', 'Berikan Tanggapan anda', 'Email to CEO\'s Office']
    },
    {
      title: 'Akun & Komunitas',
      items: ['Halaman Saya', 'Produk Saya', 'Pesanan', 'Wishlist', 'Voucher', 'Layanan', 'Member']
    },
