      }
    }
  ];




//Footer
.footer
  .container
    .footer__nav
      ul.footer__nav__list
        each section in footerData
          li.footer__nav__item
            .header__nav__box
              h3.footer__nav__title
                | #{section.title}
              ul.footer__menu
                each item in section.items
                  li.footer__menu__item
                    a.footer__menu__link(href="#")
                      | #{item}
            if section.subItems
              .header__nav__box
                h3.footer__nav__title
                  | #{section.subItems.title}
                ul.footer__menu
                  each subItem in section.subItems.items
                    li.footer__menu__item
                      a.footer__menu__link(href="#")
                        | #{subItem}
